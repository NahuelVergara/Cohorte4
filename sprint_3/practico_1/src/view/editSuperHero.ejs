<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Editar Superhéroe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    function onSubmitEdit(e) {
      e.preventDefault();
      const id = document.getElementById('heroId').value;
      const nombreSuperHeroe = document.getElementById('nombreSuperHeroe').value.trim();
      const nombreReal = document.getElementById('nombreReal').value.trim();
      const edad = Number(document.getElementById('edad').value);
      const planetaOrigen = document.getElementById('planetaOrigen').value.trim();
      const debilidad = document.getElementById('debilidad').value.trim();
      const poderes = document.getElementById('poderes').value.trim();
      const aliados = document.getElementById('aliados').value.trim();
      const enemigos = document.getElementById('enemigos').value.trim();

      const errors = [];
      if (nombreSuperHeroe.length < 3) errors.push('Nombre del superhéroe: mínimo 3 caracteres');
      if (nombreReal.length < 3) errors.push('Nombre real: mínimo 3 caracteres');
      if (!Number.isInteger(edad) || edad < 0) errors.push('Edad: entero positivo');
      if (poderes.length === 0) errors.push('Debe ingresar al menos un poder');
      const errorsContainer = document.getElementById('clientErrorsContainer');
      const clientErrors = document.getElementById('clientErrors');
      if (errors.length) {
        clientErrors.innerHTML = errors.map(e => `<li>${e}</li>`).join('');
        errorsContainer.classList.remove('d-none');
        return;
      } else {
        errorsContainer.classList.add('d-none');
      }

      const body = {
        nombreSuperHeroe,
        nombreReal,
        edad,
        planetaOrigen,
        debilidad,
        poderes,
        aliados,
        enemigos,
        fromForm: 1
      };

      fetch(`/heroes/${id}/editar`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      }).then(async (resp) => {
        if (!resp.ok) {
          const data = await resp.json().catch(() => ({}));
          alert(`Error al editar: ${data.mensaje || resp.status}`);
          return;
        }
        window.location.href = '/heroes';
      }).catch(() => alert('Error de red al editar'));
    }
    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('formEditar').addEventListener('submit', onSubmitEdit);
    });
  </script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4">Editar Superhéroe</h1>

    <div id="clientErrorsContainer" class="alert alert-danger d-none">
      <ul class="mb-0" id="clientErrors"></ul>
    </div>

    <form id="formEditar" class="row g-3">
      <input type="hidden" id="heroId" value="<%= hero._id %>" />

      <div class="col-md-6">
        <label for="nombreSuperHeroe" class="form-label">Nombre del Superhéroe*</label>
        <input id="nombreSuperHeroe" name="nombreSuperHeroe" type="text" class="form-control" required minlength="3" value="<%= hero.nombreSuperHeroe %>" />
      </div>

      <div class="col-md-6">
        <label for="nombreReal" class="form-label">Nombre Real*</label>
        <input id="nombreReal" name="nombreReal" type="text" class="form-control" required minlength="3" value="<%= hero.nombreReal %>" />
      </div>

      <div class="col-md-6">
        <label for="edad" class="form-label">Edad*</label>
        <input id="edad" name="edad" type="number" min="0" step="1" class="form-control" required value="<%= hero.edad %>" />
      </div>

      <div class="col-md-6">
        <label for="planetaOrigen" class="form-label">Planeta de Origen</label>
        <input id="planetaOrigen" name="planetaOrigen" type="text" class="form-control" value="<%= hero.planetaOrigen %>" />
      </div>

      <div class="col-12">
        <label for="debilidad" class="form-label">Debilidad</label>
        <input id="debilidad" name="debilidad" type="text" class="form-control" value="<%= hero.debilidad %>" />
      </div>

      <div class="col-12">
        <label for="poderes" class="form-label">Poderes* (separados por coma)</label>
        <input id="poderes" name="poderes" type="text" class="form-control" required value="<%= Array.isArray(hero.poderes) ? hero.poderes.join(', ') : hero.poderes %>" />
      </div>

      <div class="col-12">
        <label for="aliados" class="form-label">Aliados (separados por coma)</label>
        <input id="aliados" name="aliados" type="text" class="form-control" value="<%= Array.isArray(hero.aliados) ? hero.aliados.join(', ') : hero.aliados %>" />
      </div>

      <div class="col-12">
        <label for="enemigos" class="form-label">Enemigos (separados por coma)</label>
        <input id="enemigos" name="enemigos" type="text" class="form-control" value="<%= Array.isArray(hero.enemigos) ? hero.enemigos.join(', ') : hero.enemigos %>" />
      </div>

      <div class="col-12 d-flex align-items-center gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="/heroes" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>