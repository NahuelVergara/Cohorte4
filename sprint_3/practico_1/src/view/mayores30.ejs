<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Superhéroes Mayores de 30</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- <%- include('partials/navbar') %> -->
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Superhéroes</h1>
            <!-- <a href="/heroes/agregar" class="btn btn-primary">Agregar</a> -->
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Nombre Real</th>
                        <th>Edad</th>
                        <th>Poderes</th>
                    </tr>
                </thead>
                <tbody>
                    <% superheroes.forEach(function(hero){ %>
                    <tr>
                        <td> <%= hero.nombreSuperHeroe %> </td>
                        <td> <%= hero.nombreReal %> </td>
                        <td> <%= hero.edad %> </td>
                        <td> <%= Array.isArray(hero.poderes) ? hero.poderes.join(', ') : hero.poderes %> </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/heroes" class="btn btn-secondary">Volver a Inicio</a>
        </div>
    </div>
    <!-- <%- include('partials/footer') %> -->
</body>
</html>